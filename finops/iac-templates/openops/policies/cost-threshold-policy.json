{
  "name": "cost-threshold-monitoring",
  "description": "Monitor daily cost thresholds and send alerts",
  "trigger": {
    "type": "scheduled",
    "schedule": "0 8 * * *",
    "source": "cost-explorer"
  },
  "conditions": {
    "and": [
      {
        "metric": "DailyCost",
        "namespace": "AWS/Billing",
        "threshold": 1000,
        "operator": "greater_than",
        "currency": "USD"
      }
    ]
  },
  "actions": [
    {
      "type": "notification",
      "target": "slack",
      "message": "ðŸš¨ Daily cost threshold exceeded: ${{daily_cost}} > $1000"
    },
    {
      "type": "notification",
      "target": "sns",
      "topic_arn": "arn:aws:sns:us-east-1:052236698216:openops-finops-notifications"
    },
    {
      "type": "ticket",
      "target": "jira",
      "project": "FINOPS",
      "summary": "Cost threshold alert: ${{daily_cost}}",
      "priority": "High"
    }
  ]
}